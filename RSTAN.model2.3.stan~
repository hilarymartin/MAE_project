  data {
    int<lower=0> J; // number of children
    int<lower=0> C; // number of cohorts
    int cohort[J];
    real<lower=0> y[J]; // number of recombinations
    real<lower=0> Age[J]; //maternal age at birth
    real<lower=0>	  sigmasq_beta_nkids;	 

    real<lower=0> nkids[J];
   }
  parameters {
    real beta_Age;
    real beta_nkids;
    real<lower=0> tausq[C]; //variance of number of scrossovers
  }
  transformed parameters {
    vector[J] mu;
    real<lower=0> tau_by_child[J];
    for(j in 1:J){
       mu[j] <- beta_Age*Age[j] + beta_nkids*nkids[j];
       tau_by_child[j] <- sqrt(tausq[cohort[j]]);
       
    }
  }
    model {	
  //Priors
    beta_Age ~ normal(0,1); //coefficient for age
    beta_nkids ~ normal(0,sqrt(sigmasq_beta_nkids));
    tausq ~ inv_gamma(2,70);   //variance in number of crossovers

    y ~ normal(mu,tau_by_child) ;
}

